@model IEnumerable<Bookstore_Bukvarche.Domain.Product>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        main {
            border-width: 7px;
            border-color: cornflowerblue;
            border-style: solid;
        }
        

        body {
            background-color: aquamarine;
        }
    </style>
</head>
</html>
<div class="text-center">
<img src="https://www.shift4shop.com/2015/images/build-bookstore-ecommerce/build-ecommerce-banner.png" />
</div>
<h1>Книги</h1>

<p>
    <a asp-action="Create">Създай книга</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Author.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Brand.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Stock)
    </td>
    <td>
        <img src="@Html.DisplayFor(modelItem => item.Image)" alt="Image" width="100px" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>
}
    </tbody>
</table>

